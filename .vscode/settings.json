{
  "editor.codeActionsOnSave": {
    "source.organizeImports": false,
    "source.fixAll.eslint": true,
    "source.addMissingImports": true
  },
  "editor.formatOnSave": true,
  "eslint.format.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint" 
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "eslint.validate": ["markdown", "javascript", "typescript"],
  "files.exclude": {
    "**/prettier.config.cjs": true,
    "**/node_modules/**/dist": false,
    "**/{examples,packages}/**/dist": true,
    "**/.git": true,
    "**/.vercel": true,
    "**/.netlify": true,
    "**/playwright-report": true,
    "**/.direnv": true,
    "**/.yarn": true,
    "**/.DS_Store": true,
    "**/yarn.lock": true,
    "**/flake.lock": true
  },
  "search.exclude": {
    "**/.vercel": true,
    "**/.yarn": true,
    "**/.direnv": true,
    "**/dist": true,
    "yarn.lock": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "vitest.commandLine": "direnv exec . vitest",
  "vitest.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.{idea,git,cache,output,temp,direnv}/**"
  ]
}
