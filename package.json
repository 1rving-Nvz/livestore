{
  "private": true,
  "scripts": {
    "build": "pnpm run build:ts",
    "build:clean": "bash -c \"find {examples,packages} -path '*node_modules*' -prune -o -name 'dist' -type d -exec rm -rf {} +\"",
    "build:ts": "tsc --build tsconfig.all.json",
    "dev:ts": "pnpm run build:ts --watch",
    "circular": "madge --circular --no-spinner examples/*/src packages/*/*/src",
    "lint:check": "eslint examples packages --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint examples packages --ext .ts,.tsx --fix",
    "release:patch": "pnpm run build && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- npm version patch --no-workspaces-update && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- pnpm publish --no-git-checks",
    "release:dev": "pnpm run build && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- npm version prerelease --preid=dev --no-workspaces-update && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- pnpm publish  --tag dev --no-git-checks",
    "test": "CI=true pnpm --parallel run test"
  },
  "resolutions": {
    "@livestore/livestore": "workspace:*",
    "@livestore/*": "workspace:*",
    "@livestore/devtools-react": "0.0.54-dev.19",
    "effect-db-schema": "workspace:*"
  },
  "dependencies": {
    "@effect/language-service": "^0.1.0",
    "madge": "^6.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "prettier": "^3.3.2",
    "prettier-plugin-packagejson": "^2.5.0",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.3.0"
}