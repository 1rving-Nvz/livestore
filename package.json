{
  "private": true,
  "workspaces": [
    "packages/@livestore/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "postinstall": "ts-patch install -s",
    "build": "run build:ts",
    "build:ts": "tsc --build tsconfig.all.json",
    "build:clean": "bash -c \"find {examples,packages} -path '*node_modules*' -prune -o -name 'dist' -type d -exec rm -rf {} +\"",
    "release": "run build && yarn workspaces foreach --verbose --topological-dev --parallel --no-private npm publish --tolerate-republish",
    "dev:ts": "run build:ts --watch",
    "test": "CI=true yarn workspaces foreach --parallel --verbose --all run test",
    "lint:check": "eslint examples packages --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint examples packages --ext .ts,.tsx --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "prettier": "^3.0.3",
    "ts-patch": "^3.0.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@3.6.3",
  "resolutions": {
    "@livestore/livestore": "workspace:*",
    "@livestore/*": "workspace:*"
  },
  "dependencies": {
    "@effect/language-service": "^0.0.21"
  }
}
